PQML_2016_z_A <- glm(TradeFlow ~ 
                       #log(exporter_pop)+
                       #log(importer_pop)+
                       #   + deg16_D+
                       # + deg16_O+
                       log(exporter_gdp)+
                       log(importer_gdp)+
                       log(exporter_gdp.pc)+
                       log(importer_gdp.pc)+
                       contig+
                       comlang+
                       colony+
                       fta_wto+
                       log(dist)+
                       log(exporter_remote)+
                       log(importer_remote)+
                       deg_out16_D+
                       deg_out16_O+
                       #+LSBCI_2
                       #DCon+
                       numTrans+
                       #ComDir+
                       #TEU_D+TEU_O+
                       log(MaxShipSize)+
                       Maxmincarriers, family = quasipoisson(link="log"),
                     data = cdata_C16)
